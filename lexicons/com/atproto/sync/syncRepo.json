{
  "lexicon": 1,
  "id": "com.atproto.sync.syncRepo",
  "defs": {
    "main": {
      "type": "query",
      "description": "Sync repository updates since a given revision.",
      "parameters": {
        "type": "params",
        "required": ["did"],
        "properties": {
          "did": {
            "type": "string",
            "format": "did",
            "description": "The DID of the repo."
          },
          "since": {
            "type": "string",
            "description": "The revision from which to sync changes."
          },
          "collection": {
            "type": "string",
            "format": "nsid",
            "description": "The NSID of the collection to sync."
          }
        }
      },
      "output": {
        "encoding": "application/json-lines",
        "schema": {
          "type": "object",
          "required": ["path", "cid", "block"],
          "nullable": ["path", "cid", "block"],
          "properties": {
            "path": { "type": "string" },
            "cid": { "type": "cid-link" },
            "block": { "type": "unknown" }
          }
        }
      },
      "errors": []
    }
  }
}
